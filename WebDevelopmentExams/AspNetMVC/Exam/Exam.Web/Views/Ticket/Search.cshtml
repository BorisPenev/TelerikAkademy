@model IEnumerable<Exam.Web.Models.TicketsViewModel>

@{
    ViewBag.Title = "Search Result";
}

<h2>@ViewBag.Title</h2>

<div class="row-fluid">
    @for (int i = 0; i < Model.Count(); i++)
    {
        var ticket = Model.ElementAt(i);
        <div class="span4">
            <h2>@ticket.Title</h2>
            <p><a class="btn" href="@Url.Action("Details", "Ticket", new { ticket.Id })">Details</a></p>
        </div>

        if (i > 0 && (i + 1) % 3 == 0)
        {
            @:</div>
            @:<div class="row-fluid">
        }
    }
</div>
